{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-standard",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [140]
        },
        "quotemark": {
            "options": ["single", "jsx-double", "avoid-escape", "avoid-template"]
        },
        "semicolon": {
            "options": ["always", "strict-bound-class-methods"]
        },
        "member-access": false,
        "interface-name": false,
        "arrow-parens": false,
        "object-literal-sort-keys": false,
        "no-empty": [true, "allow-empty-functions"],
        "no-consecutive-blank-lines": true,
        "indent": [true, "spaces", 4],
        "ordered-imports": [
            true,
            {
                "grouped-imports": true,
                "import-sources-order": "any",
                "named-imports-order": "any"
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "always"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}
